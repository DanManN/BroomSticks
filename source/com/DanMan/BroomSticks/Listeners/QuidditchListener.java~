/*    */   @EventHandler
/*    */   public void onCatchSnitch(EntityDamageByEntityEvent evt)
/*    */   {
/* 53 */     if (((evt.getDamager() instanceof Player)) && ((evt.getEntity() instanceof Bat))) {
/* 54 */       Player player = (Player)evt.getDamager();
/* 55 */       Bat b = (Bat)evt.getEntity();
/* 56 */       player.sendMessage(ChatColor.GOLD + "Congratulations you have caught the Snitch!");
/* 57 */       Balls.catchSnitch(player, b, this.plugin);
/*    */     }
/*    */   }
