/*    */   @EventHandler
/*    */   public void onReleaseSnitch(PlayerInteractEvent evt)
/*    */   {
/* 38 */     if (evt.getItem() == null) {
/* 39 */       return;
/*    */     }
/* 41 */     if (evt.getAction() == Action.RIGHT_CLICK_BLOCK) {
/* 42 */       Location loc = evt.getClickedBlock().getLocation();
/* 43 */       loc.setY(loc.getY() + 1.0D);
/* 44 */       if (evt.getItem().getType() == Material.STICK) {
/* 45 */         Balls.releaseSnitch(loc, this.plugin);
/*    */       }
/*    */     }
/*    */   }
